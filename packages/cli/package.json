{
  "name": "@cmax/cli",
  "version": "0.1.0",
  "description": "Command line interface for CMAX Arena",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "cmax": "./dist/index.js"
  },
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": ["dist"],
  "scripts": {
    "build": "tsup",
    "clean": "rm -rf dist",
    "start": "node dist/index.js",
    "dev": "tsup --watch",
    "test": "echo 'CLI tests: manual testing only'",
    "test:watch": "vitest",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@cmax/core": "workspace:*",
    "@cmax/games": "workspace:*",
    "@cmax/agents": "workspace:*",
    "commander": "^12.0.0"
  },
  "devDependencies": {
    "tsup": "^8.0.0",
    "typescript": "^5.3.0",
    "vitest": "^1.2.0"
  },
  "license": "MIT"
}
